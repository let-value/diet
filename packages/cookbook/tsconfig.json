{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",

		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "ts",
		"isolatedModules": false,

		"jsx": "react",
		"jsxFactory": "jsx",

		"importHelpers": false,

		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"types": ["bun",],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["dist", "ts"]
}
