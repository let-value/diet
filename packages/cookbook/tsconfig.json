{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",

		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "types",
		"isolatedModules": false,

		"jsx": "react",
		"jsxFactory": "jsx",

		"importHelpers": false,

		"moduleResolution": "Bundler",
		"types": ["bun",],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["dist", "types"]
}
