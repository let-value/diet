{
	"compilerOptions": {
		"lib": ["ESNext", "ESNext.Object"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",

		"outFile": "dist/index.d.ts",

		"declaration": true,
		"emitDeclarationOnly": true,

		"jsx": "react",
		"jsxFactory": "jsx",

		"importHelpers": false,

		"moduleResolution": "Bundler",
		"types": ["bun",],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["dist"]
}
